<html>
<head>
<meta charset="ISO-8859-1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="${pageContext.request.contextPath}/css/main.css">
<title>Listaa veneet | Peppi Mäkelä</title>
</head>
<body>

<table id="listaus">
	<thead>
		<tr>
			<th colspan="6" class="oikealle"><span id="uusiVene" class="siirry">LISÄÄ UUSI VENE</span></th>
		</tr>
		<tr>
			<th>Hakusana:</th>
			<th colspan="4"><input type="text" id="hakusana"></th>
			<th><input type="button" class="nappi" value="HAE" id="hakunappi"></th>
		</tr>
		<tr>
			<th>Nimi</th>
			<th>Merkki ja malli</th>
			<th>Pituus</th>
			<th>Leveys</th>
			<th>Hinta</th>
			<th>Hallinta</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>

<script>
$(document).ready(function() {
	haeVeneet();
	
	$("#hakusana").focus();
	
	$("#hakunappi").click(function() {
		console.log($("#hakusana").val());
		haeVeneet();
	});
	
	$(document.body).on("keydown", function(event) {
		if(event.which == 13) {
			haeVeneet();
		}
	});
	
	$("#uusiVene").click(function() {
		document.location = "lisaavene.jsp";
	});
	
});

function haeVeneet() {
	$("#listaus tbody").empty();
	$.ajax({
		url:"veneet/" + $("#hakusana").val(), 
		type:"GET", 
		dataType:"json", 
		success:function(result) {
		$.each(result.veneet, function(i, field) {
			var htmlStr;
        	htmlStr += "<tr id='rivi_" + field.tunnus + "'>";
			htmlStr += "<td>" + field.nimi + "</td>";
			htmlStr += "<td>" + field.merkkimalli + "</td>";
			htmlStr += "<td class='oikealle'>" + field.pituus + " m" + "</td>";
			htmlStr += "<td class='oikealle'>" + field.leveys + " m" + "</td>";
			htmlStr += "<td class='oikealle'>" + field.hinta + " e" + "</td>";
			htmlStr += "<td><span class='poista' onclick=poista('" + field.tunnus + "')>Poista</span></td>";
			htmlStr += "</tr>";
			$("#listaus tbody").append(htmlStr);
		});
	}});
}

function poista(tunnus) {
	if(confirm("Haluatko varmasti poistaa veneen " + tunnus + "?")) {
		$.ajax({
			url: "veneet/" + tunnus,
			type: "DELETE",
			dataType: "json",
			success: function(result) {
				if(result.response == 0) {
					$("#ilmo").html("Veneen poistaminen epäonnistui.");
				} else if(result.response == 1) {
		        	$("#rivi_" + tunnus).css("background-color", "red"); // Ei toimi
					alert("Veneen " + tunnus + " poistaminen onnistui.");
					haeVeneet();
				}
			}
		})
	}
}
</script>

</body>
</html>